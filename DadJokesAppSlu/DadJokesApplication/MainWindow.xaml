<Window x:Class="DadJokesApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DadJokesApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button 
            x:Name="Jokes" 
            Content="Button" 
            HorizontalAlignment="Left" 
            Margin="129,242,0,0" 
            VerticalAlignment="Top" 
            Height="123" Width="519" 
            FontSize="32" 
            Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" 
            Foreground="#FFB72929"
            Click="Button_Click"
            />
        
        
        <TextBox x:Name="JokeTextBox" HorizontalAlignment="Left" Margin="104,78,0,0" Text="TextBox" TextWrapping="Wrap" VerticalAlignment="Top" Width="544" Height="89" FontSize="20"/>
    </Grid>
</Window>
